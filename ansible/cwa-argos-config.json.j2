{
    "agent": {
      "metrics_collection_interval": 60
    },
    "metrics": {
      "metrics_collected": {
        "Processor": {
          "measurement": [
            {"name": "% Idle Time", "rename": "CPU_IDLE", "unit": "Percent"},
            "% Interrupt Time",
            "% User Time",
            "% Processor Time"
          ],
          "metrics_collection_interval": 60,
          "resources": [
            "*"
          ]
        },
        "LogicalDisk": {
          "measurement": [
            {"name": "% Idle Time", "unit": "Percent"},
            {"name": "% Disk Read Time", "rename": "DISK_READ"},
            "% Disk Write Time",
            "% Free Space"
          ],
          "metrics_collection_interval": 60,
          "resources": [
            "*"
          ]
        },
        "Memory": {
          "metrics_collection_interval": 60,
          "measurement": [
            "% Committed Bytes In Use",
            "Available Bytes",
            "Cache Faults/sec",
            "Page Faults/sec",
            "Pages/sec"
          ]
        },
        "Network Interface": {
          "metrics_collection_interval": 60,
          "measurement": [
            "Bytes Received/sec",
            "Bytes Sent/sec",
            "Packets Received/sec",
            "Packets Sent/sec"
          ],
          "resources": [
            "*"
          ]
        },
        "System": {
          "measurement": [
            "Context Switches/sec",
            "System Calls/sec",
            "Processor Queue Length"
          ]
        }
      },
      "append_dimensions": {
        "ImageId": "${aws:ImageId}",
        "InstanceId": "${aws:InstanceId}",
        "InstanceType": "${aws:InstanceType}",
        "AutoScalingGroupName": "${aws:AutoScalingGroupName}"
      },
      "aggregation_dimensions" : [["ImageId"], ["InstanceId", "InstanceType"], ["d1"],[]],
      "namespace": "{{ app_name }}"
    },
    "logs": {
      "logs_collected": {
        "files": {
          "collect_list": [
            {
              "file_path": "c:\\ProgramData\\Amazon\\AmazonCloudWatchAgent\\Logs\\amazon-cloudwatch-agent.log",
              "log_group_name": "{{ app_name }}-CustomLogs",
              "log_stream_name": "AmazonCloudWatchAgentLog-{instance_id}",
              "timezone": "UTC"
            },
            {
              "file_path": "C:\\ProgramData\\amazon\\EC2-Windows\\Launch\\Log\\UserdataExecution.log",
              "log_group_name": "{{ app_name }}-CustomLogs",
              "log_stream_name": "UserData-{instance_id}",
              "timezone": "UTC"
            },
            {
              "file_path": "C:\\Windows\\System32\\LogFiles\\HTTPERR\\*",
              "log_group_name": "{{ app_name }}-CustomLogs",
              "log_stream_name": "HttpErr-{instance_id}",
              "timezone": "UTC"
            },
            {
              "file_path": "C:\\inetpub\\logs\\LogFiles\\W3SVC1\\*",
              "log_group_name": "{{ app_name }}-CustomLogs",
              "log_stream_name": "IIS-{instance_id}",
              "timezone": "UTC"
            },
            {
              "file_path": "C:\\Travelex\\{{ app_name }}\\Web\\Logs\\UILog",
              "log_group_name": "{{ app_name }}-ApplicationLogs",
              "log_stream_name": "WebUIlog-{instance_id}",
              "timezone": "UTC"
            },            
            {
              "file_path": "C:\\Travelex\\{{ app_name }}\\Win\\Services\\Logs\\TaskMakerLog",
              "log_group_name": "{{ app_name }}-ApplicationLogs",
              "log_stream_name": "TaskMakerLog-{instance_id}",
              "timezone": "UTC"
            },
            {
              "file_path": "C:\\Travelex\\{{ app_name }}\\Win\\Services\\Logs\\TaskSubscriberLog",
              "log_group_name": "{{ app_name }}-ApplicationLogs",
              "log_stream_name": "TaskSubscriberLog-{instance_id}",
              "timezone": "UTC"
            }
          ]
        },
        "windows_events": {
          "collect_list": [
            {
              "event_name": "System",
              "event_levels": [
                "CRITICAL",
                "ERROR"
              ],
              "log_group_name": "{{ app_name }}-WindowsEventLogs",
              "log_stream_name": "SystemEvents-{instance_id}",
              "event_format": "xml"
            },
            {
              "event_name": "Security",
              "event_levels": [
                "CRITICAL",
                "ERROR"
              ],
              "log_group_name": "{{ app_name }}-WindowsEventLogs",
              "log_stream_name": "SecurityEvents-{instance_id}",
              "event_format": "xml"
            },
            {
              "event_name": "Application",
              "event_levels": [
                "CRITICAL",
                "ERROR"
              ],
              "log_group_name": "{{ app_name }}-WindowsEventLogs",
              "log_stream_name": "ApplicationEvents-{instance_id}",
              "event_format": "xml"
            }
          ]
        }
      },
      "log_stream_name": "{{ app_name }}"
    }
}
