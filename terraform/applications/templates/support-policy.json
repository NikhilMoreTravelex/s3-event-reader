{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": "appstream:Stream",
            "Resource": "arn:aws:appstream:${region}:${account_id}:stack/ArgosStack",
            "Condition": {
                "StringEquals": {
                    "appstream:userId": "$${saml:sub}",
                    "saml:sub_type": "persistent"
                }
            }
        }
    ]
}
